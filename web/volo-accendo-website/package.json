{
  "name": "volo-accendo-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "clean": "rm -rf .next node_modules .lambdas",
    "clean:lambdas": "rm -rf .lambdas",
    "dev": "NODE_OPTIONS='--inspect' next dev",
    "build": "cp .env.prod .env && next build && pnpm copy:routes && pnpm copy:public && pnpm build:lambdas",
    "build:dev": "cp .env.dev .env && next build && pnpm copy:routes && pnpm copy:public && pnpm build:lambdas",
    "build:lambdas": "pnpm clean:lambdas && pnpm compile:lambdas && pnpm copy:config && pnpm copy:static && pnpm copy:standalone",
    "build:prod": "pnpm build",
    "compile:lambdas": "tsc -p tsconfig.lambdas.json",
    "copy:config": "cp next.config.mjs .lambdas",
    "copy:public": "cp -r public .next/standalone/ && cp -r public/* .next/standalone/.next/server/app/",
    "copy:routes": "cp .next/routes-manifest.json ../../cloud/terraform/",
    "copy:standalone": "cp -r .next/standalone/. .lambdas",
    "copy:static": "mkdir -p .next/standalone/.next/server/app/_next/ && cp -r .next/static .next/standalone/.next/ && cp -r .next/static .next/standalone/.next/server/app/_next/",
    "lint": "next lint",
    "zip:lambdas": "cd .lambdas && zip -r nextjs-lambda-edge.zip .",
    "start": "node server.js",
    "test": "pnpm jest",
    "test:watch": "pnpm jest --watch"
  },
  "dependencies": {
    "@mdx-js/loader": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@next/mdx": "^15.1.6",
    "@types/mdx": "^2.0.13",
    "clsx": "^2.1.1",
    "daisyui": "^4.12.14",
    "next": "15.1.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^3.4.7",
    "zod": "^3.23.8",
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@svgr/webpack": "^8.1.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/aws-lambda": "^8.10.146",
    "@types/node": "^20.14.13",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "dotenv-cli": "^7.4.2",
    "env-cmd": "^10.1.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.40",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "packageManager": "pnpm@9.10.0+sha512.73a29afa36a0d092ece5271de5177ecbf8318d454ecd701343131b8ebc0c1a91c487da46ab77c8e596d6acf1461e3594ced4becedf8921b074fbd8653ed7051c"
}
